<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="222dp"
        android:layout_margin="6dp"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/txt_jam_tayang"
            android:layout_width="180dp"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/txt_film"
            android:layout_marginBottom="81dp"
            android:text="Jam tayang"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_film"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="47dp"
            android:text="Nama film"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            android:layout_toRightOf="@id/poster1"/>

        <!--<ImageView-->
            <!--android:id="@+id/imgMovimax"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="62dp"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:layout_alignParentTop="true"-->
            <!--card_view:srcCompat="@drawable/movlogo" />-->

        <ImageView
            android:id="@+id/poster1"
            android:layout_width="110dp"
            android:layout_height="193dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="18dp"
            card_view:srcCompat="@mipmap/ic_launcher_round" />

    </RelativeLayout>

</android.support.v7.widget.CardView>